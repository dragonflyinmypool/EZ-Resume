<div class="mb-4">
  <% userHistory.forEach(function(item) { %>
  <div class="<%= title.toLowerCase() %>">
    <div class="d-flex justify-content-between align-items-center mb-1">
      <p class="mb-0"><%= item.description %></p>
      <form action="/dashboard/delete-info/<%= section.toLowerCase() %>/<%= item._id %>?_method=DELETE" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="page" value="<%= page %>">
        <button type="submit" class="btn btn-sm btn-danger light-red round">x</button>
      </form>
    </div>
  </div>
  <% }) %>

  <form action="/dashboard/add-info" method="POST">
    <input type="hidden" name="section" value="<%= section.toLowerCase() %>">
    <input type="hidden" name="page" value="<%= page %>">

    <textarea name="description" class="form-control mb-2" style="height: <%=textboxHeight %>;" required placeholder="<%= message %>" id="<%= title %>textArea"></textarea>
    <button type="submit" class="btn btn-primary w-100">Add</button>
  </form>
</div>

<style>
  .light-red {
    background-color: #cf9696;
    border-color: #cf9696;
  }

  .round {
    border-radius: 100%;
    height: 20px;
    width: 20px;
    padding: 0;
    line-height: 0;
  }
</style>